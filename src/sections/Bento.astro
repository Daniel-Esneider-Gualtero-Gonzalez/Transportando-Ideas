---
import Truck from "../components/icons/Truck.astro";
import CircleCheck from "../components/icons/CircleCheck.astro";
import LinkContact from "../components/LinkContact.astro";
import LinkCotizarBento from "../components/LinkCotizarBento.astro";
---

<style>
  * {
    list-style: none;
    box-sizing: border-box;
  }

  section {
    position: relative;
    display: grid;
    grid-template-columns: repeat(1, minmax(200px, 1fr));
    gap: 0.5rem;
    font-size: 1.2rem;
    width: 100%;
    overflow: hidden;
  }
  section h2,
  h3 {
    font-weight: bold;
  }

  section .img-logo {
    position: absolute;
    width: 150px;
    height: 150px;
    border-radius: 100%;
    inset: 0;
    background-color: white;
    margin: auto;
    display: none;
  }
  .slogan {
    background-color: rgba(239, 246, 255, 1);
    display: none;
    justify-content: center;
    align-items: center;
  }
  .text-slogan {
    background-image: radial-gradient(
      ellipse at bottom left,
      #d97706,
      #1e40af,
      #fb7185
    );
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    display: flex;
    text-align: center;
    font-size: 1.9rem;
  }

  @media (min-width: 620px) {
    section {
      grid-template-columns: repeat(2, minmax(200px, 1fr));
    }

    .info-users article {
      height: 50%;
    }
  }

  @media (min-width: 1045px) {
    section {
      grid-template-columns: repeat(3, minmax(200px, 1fr));
      width: 98%;
      margin: auto;
    }

    section .img-logo {
      display: flex;
    }

    .slogan {
      display: flex;
    }

    .contactanos {
      position: relative;
      height: 50%;
      /* background: conic-gradient(at bottom right, #000000, #000000, #251c4b); */
    }
  }

  section div,
  article {
    /* height: 200px; */
    border-radius: 20px;

    padding: 5px;
  }
  .service {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .service ul {
    padding: 0;
  }

  .service ul li {
    display: flex;
    align-items: center;
  }

  .info-users {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0.5rem;
    background-color: rgba(210, 210, 210, 0);
  }

  .info-users article {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-users .clientes {
   
    display: flex;
    flex-direction: column;
  }

  .info-users .clientes div {
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    width: fit-content;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
  }

  .info-users .clientes div .empresa {
    position: relative;
    display: flex;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    margin-left: -6%;
  }

  

  .info-path {
    display: flex;
    gap: 0.5rem;
    justify-content: space-between;
  }

  .info-path article {
    height: 100%;
    width: 50%;
  }

  .info-path article h3 {
    display: flex;
    flex-direction: column;
  }

  .contactanos {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .contactanos ul {
    display: flex;
    gap: 2rem;
    min-height: calc(20% + 50px);
  }

  .contactanos ul > :nth-child(odd) {
    align-self: flex-end;
  }

  .contactanos svg {
    width: 50px;
    height: 50px;
  }
</style>

