<style>
    .title-section-service {
        display: flex;
        margin-bottom: 0.5rem;
        font-size: 2.8rem;
        font-weight: 400;
        width: 43%;
    }

    .title-section-service svg {
        rotate: 90deg;
        width: 250px;
        height: 200px;
        color: blue;
    }

    #services {
        display: grid;
        
        place-items: center;
        grid-template-columns: repeat(auto-fill, minmax(330px, 1fr));
        gap: 0.5rem;
    }

    #services div {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        padding: 5px;
        /* background-color: rgb(199, 239, 213); */
        border-radius: 5px;
    }

    #services div img {
        width: 200px;
        margin: auto;
    }

    #services div h3 {
        text-align: center;
        font-weight: bolder;
        font-size: 1.3rem;
    }
    @media (max-width: 600px) {
        .title-section-service {
            font-size: 1.7rem;
            width: 100%;
        }
        .title-section-service svg {
            width: 100px;
            height: 150px;
        }
    }
</style>

