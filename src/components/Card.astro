---
interface Props {
	title: string;
	body: string;
	image:string;
	
}

const { image, title, body } = Astro.props;
---

<div>
	<img
		src={image}
		alt=""
	/>
	<h3>{title}</h3>
	<p>
		{body}
	</p>
</div>
<style>
	div {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        padding: 0.5rem;
        /* background-color: rgb(199, 239, 213); */
        border-radius: 5px;
		/* border: 1px solid rgb(201, 190, 190); */
		max-width: 320px;
		background-color: white;
		box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    }

    div img {
        width: 150px;
		height: 180px;
        margin: auto;
		
		
    }

     div h3 {
        text-align: center;
        font-weight: bolder;
        font-size: 1.3rem;
    }
    
</style>
