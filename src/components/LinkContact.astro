---
import Whatsapp from './icons/Whatsapp.astro';
import Correo from './icons/Correo.astro';
interface Props {
    type: "whatsapp" | "email" | "facebook" | "phone";
    istooltype: boolean;
}

let { type, istooltype } = Astro.props;
---

{
    type === "whatsapp" && (
        <a href="https://wa.me/573203442396?text=¡Hola! Quiero realizar una cotización para mi próximo evento." target="_blank" class="group text-green-600">
            <Whatsapp />
            {istooltype && (
                <span class={"hidden bg-green-600 p-2 group-hover:flex"}>
                    Whatsapp
                </span>
            )}
        </a>
    )
}
{
    type === "email" && (
        <a href="" class="group text-blue-600">
           <Correo />
            {istooltype && (
                <span class={"hidden bg-blue-600 p-2 group-hover:flex"}>
                    Correo
                </span>
            )}
        </a>
    )
}
{
    type === "phone" && (
        <a href="tel:+573157057663" class="group text-black">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 3a1 1 0 0 1 .877 .519l.051 .11l2 5a1 1 0 0 1 -.313 1.16l-.1 .068l-1.674 1.004l.063 .103a10 10 0 0 0 3.132 3.132l.102 .062l1.005 -1.672a1 1 0 0 1 1.113 -.453l.115 .039l5 2a1 1 0 0 1 .622 .807l.007 .121v4c0 1.657 -1.343 3 -3.06 2.998c-8.579 -.521 -15.418 -7.36 -15.94 -15.998a3 3 0 0 1 2.824 -2.995l.176 -.005h4z" />
            </svg>
            {istooltype && (
                <span class={"hidden bg-black p-2 group-hover:flex"}>
                    Telefono
                </span>
            )}
        </a>
    )
}
{
    type === "facebook" && (
        <a href="" class="group ">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="#4267B2"
                class="icon icon-tabler icons-tabler-filled icon-tabler-brand-facebook"
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M18 2a1 1 0 0 1 .993 .883l.007 .117v4a1 1 0 0 1 -.883 .993l-.117 .007h-3v1h3a1 1 0 0 1 .991 1.131l-.02 .112l-1 4a1 1 0 0 1 -.858 .75l-.113 .007h-2v6a1 1 0 0 1 -.883 .993l-.117 .007h-4a1 1 0 0 1 -.993 -.883l-.007 -.117v-6h-2a1 1 0 0 1 -.993 -.883l-.007 -.117v-4a1 1 0 0 1 .883 -.993l.117 -.007h2v-1a6 6 0 0 1 5.775 -5.996l.225 -.004h3z" />
            </svg>
            {istooltype && (
                <span class={"hidden bg-[#4267B2] p-2 group-hover:flex"}>
                    Facebook
                </span>
            )}
        </a>
    )
}

<style>
    a {
        position: relative;
        display: flex;
        width: fit-content;
        height: fit-content;
    }
    a svg {
        height: 50px;
        width: 50px;
    }

    span {
        border-radius: 10px;
        font-size: 1.3rem;
        color: white;
        position: absolute;
        width: fit-content;
        height: fit-content;
        inset: 0 !important;
        margin: auto;
        display: none;
    }

    a:hover span {
        justify-content: center;
        align-items: center;
        animation: tooltip 400ms ease-in 1 both;
    }

    @keyframes tooltip {
        0% {
            top: 50%;
            left: 50%;
            transform: translate(-30%, -50%);
        }
        100% {
            transform: translate(-30%, -120%);
        }
    }
</style>
